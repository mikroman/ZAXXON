{
    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "echoCommand": true,
    "args": [
        "/C"
    ],
    "tasks": [
        {
            "label": "Build bin01",
            "type": "shell",
            "windows": {
                "command": "java -cp C:\\C64\\tools\\kickassembler\\KickAss.jar kickass.KickAssembler zaxxon01-8_9_AB.asm -o bin\\zaxxon01.bin -debugdump -symbolfile -bytedump -binfile"
            }
        },
        {
            "label": "Build bin02",
            "type": "shell",
            "windows": {
                "command": "java -cp C:\\C64\\tools\\kickassembler\\KickAss.jar kickass.KickAssembler zaxxon02-AB.asm -o bin\\zaxxon02.bin -debugdump -symbolfile -bytedump -binfile"
            },
            "dependsOn": [
                "Build bin01"
            ]
        },
        {
            "label": "Build crt from bins",
            "type": "shell",
            "windows": {
                "command": "java -cp C:\\C64\\tools\\kickassembler\\KickAss.jar kickass.KickAssembler buildzaxcart.asm -o bin\\zaxxon.crt -debugdump -symbolfile -bytedump -binfile"
            },
            "dependsOn": [
                "Build bin02"
            ]
        },
        {
            "label": "Build & Launch C64debugger",
            "type": "shell",
            "windows": {
                "command": "\"C:\\Users\\Mike\\Desktop\\C64Debug\\C64Debugger-v0.64.58.6\\C64Debugger.exe\" -cartcrt ${fileDirname}\\bin\\zaxxon.crt -debuginfo ${fileDirname}\\bin\\zaxxon01.dbg -jmp $fce2 -layout 11"
            },
            "dependsOn": [
                "Build crt from bins"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Launch VICE",
            "type": "shell",
            "windows": {
                "command": "\"C:\\C64\\tools\\GTK3VICE-3.7-win64\\bin\\x64sc.exe\" -cartcrt ${fileDirname}\\bin\\zaxxon.crt"
            },
            "dependsOn": [
                "Build crt from bins"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}